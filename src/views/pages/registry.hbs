<body id="kt_body" style="background-image: url(assets/media/bg/bg-10.jpg)"
  class="quick-panel-right demo-panel-right offcanvas-right header-fixed subheader-enabled page-loading">
  <!--begin::Main-->
  <div class="d-flex flex-column flex-root">
    <!--begin::Login-->
    <div class="login login-4 login-signin-on d-flex flex-row-fluid" id="kt_login">
      <div class="d-flex flex-center flex-row-fluid bgi-size-cover bgi-position-top bgi-no-repeat"
        style="background-image: url('assets/media/bg/bg-3.jpg');">
        <div class="login-form text-center p-7 position-relative overflow-hidden">
          <!--begin::Login Header-->
          <div class="d-flex flex-center mb-2">
            <a href="/">
              {{!-- <img src="/assets/media/logos/logo-letter-13.png" class="max-h-75px" alt="" /> --}}
              <img src="img/logo.png" class="max-h-150px" alt="" />
            </a>
          </div>
          <!--end::Login Header-->
          <!--begin::Login Sign in form-->
          <div class="login-signin">
            <div class="mb-5">
              <h1>Sign Up </h1>
            </div>
            <form class="form" action="/registry" method="POST" id="kt_signup_form">

              <div class="form-group mb-5">
                <input class="form-control h-auto form-control-solid py-4 px-8" type="text" placeholder="Username"
                  name="username" autocomplete="off" minlength="4" required />
              </div>

              <div class="form-group mb-5">
                <input class="form-control h-auto form-control-solid py-4 px-8" type="text" placeholder="Email"
                  name="to" autocomplete="off" required />
              </div>

              <div class="form-group mb-5">
                <input class="form-control h-auto form-control-solid py-4 px-8" type="password" placeholder="Password"
                  name="password" id="password" minlength="4" maxlength="20" required />
              </div>

              <div class="form-group mb-5">
                <input class="form-control h-auto form-control-solid py-4 px-8" type="password"
                  placeholder="Confirm Password" name="cfpassword" id="cfpassword" minlength="4" maxlength="20" required />

                <div id='message'></div>
                <div id="errMsg" class="mt-4 font-weight-bold text-uppercase" style="color: red">{{Message}}</div>

              </div>
              <button id="kt_signup_submit" type="submit" class="btn btn-primary font-weight-bold px-9 py-4 mx-4">Sign
                Up</button>
            </form>
          </div>
          <!--end::Login Sign in form-->

        </div>
      </div>
    </div>
    <!--end::Login-->
  </div>
  <!--end::Main-->
