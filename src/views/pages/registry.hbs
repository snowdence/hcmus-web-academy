<script>
  $('#password, #cfpassword').on('keyup', function () {
    if ($('#password').val() !== $('#cfpassword').val()) {
      $('#message').html('CONFIRM PASSWORD DOES NOT MATCH').css('color', 'red');
      $("#kt_signup_submit").attr("disabled", true);
    } else {
      $('#message').html('');
      $("#kt_signup_submit").attr("disabled", false);
    }
  });
  $(document).ready(function () {

    $("#errMsg").show().delay(2000).fadeOut();
  });
</script>