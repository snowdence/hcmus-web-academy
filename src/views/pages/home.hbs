      <div class="mt-10 mr-4 ml-4 pr-4 pl-4 card card-custom gutter-b card-stretch">
        <u>
          <h2 class="mt-7 ml-2">Top 4 courses in the week</h2>
        </u>
        <div class="mt-7 d-flex flex-row">
          {{#each top5Courses}}
          <div class="d-flex flex-column">
            <img class="mr-1 ml-1 pl-1 pr-1" src="{{this.thumbnail}}" alt="{{this.name}}" />
            <div class="mr-1 ml-1 mt-5 mb-8 pl-1 pr-1">
              <h6>{{this.name}}</h6>
            </div>
          </div>
          {{/each}}
        </div>
      </div>

      <div class="mt-10 mr-4 ml-4 pr-4 pl-4 card card-custom gutter-b card-stretch">
        <u>
          <h2 class="mt-7 ml-2">Top 10 popular online courses</h2>
        </u>
        <div id="carouselExampleControls" class="mt-7 carousel slide" data-ride="carousel">
          <div class="carousel-inner">

            <div class="carousel-item active">
              <div class="d-flex flex-row">
                {{#each top10Courses}}
                {{#if (checkIndex @index)}}
                <div class="d-flex flex-column">
                  <img class="mr-1 ml-1 pl-1 pr-1" src="{{this.thumbnail}}" alt="{{this.name}}" />
                  <div class="mr-1 ml-1 mt-5 mb-8 pl-1 pr-1">
                    <h6>{{this.name}}</h6>
                  </div>
                </div>
                {{/if}}
                {{/each}}
              </div>
            </div>
            <div class="carousel-item">
              <div class="d-flex flex-row">
                {{#each top10Courses}}
                {{#if (checkIndex @index)}}
                {{else}}
                <div class="d-flex flex-column">
                  <img class="mr-1 ml-1 pl-1 pr-1" src="{{this.thumbnail}}" alt="{{this.name}}" />
                  <div class="mr-1 ml-1 mt-5 mb-8 pl-1 pr-1">
                    <h6>{{this.name}}</h6>
                  </div>
                </div>
                {{/if}}
                {{/each}}
              </div>
            </div>
          </div>

        </div>
        <a class="carousel-control-prev " href="#carouselExampleControls" role="button" data-slide="prev"
          style="width: 1.5%; filter: invert(1); height: 100%;">
          <span class="carousel-control-prev-icon" aria-hidden="true"></span>
          <span class="sr-only">Previous</span>
        </a>
        <a class="carousel-control-next" href="#carouselExampleControls" role="button" data-slide="next"
          style="width: 1.5%; filter: invert(1); height: 100%;">
          <span class="carousel-control-next-icon" aria-hidden="true"></span>
          <span class="sr-only">Next</span>
