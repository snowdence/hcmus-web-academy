                <div class="datatable datatable-bordered datatable-head-custom datatable-default datatable-primary datatable-loaded"
                    id="kt_datatable" style="">
                    <table class="datatable-table" style="display: block;">
                        <thead class="datatable-head">
                            <tr class="datatable-row" style="left: 0px;">
                                <th data-field="RecordID"
                                    class="datatable-cell-left datatable-cell datatable-cell-sort datatable-cell-sorted"
                                    data-sort="asc"><span style="width: 40px;">#<i class="flaticon2-arrow-up"></i></span></th>
                                <th data-field="OrderID" class="datatable-cell datatable-cell-sort">
                                    <span style="width: 250px;color:black">Tên người dùng</span></th>
                                <th data-field="Country" class="datatable-cell datatable-cell-sort">
                                    <span style="width: 158px;color:black">Tên tài khoản</span>
                                </th>
                                <th data-field="ShipDate" class="datatable-cell datatable-cell-sort">
                                    <span style="width: 158px;color:black">Số điện thoại</span></th>
                                <th data-field="CompanyName" class="datatable-cell datatable-cell-sort"><span
                                        style="width: 158px; color:black ">Email</span></th>
                                <th data-field="Status" class="datatable-cell datatable-cell-sort"><span
                                        style="width: 158px; color:black">Trạng thái</span></th>
                                <th data-field="Actions" data-autohide-disabled="false" class="datatable-cell datatable-cell-sort"><span
                                        style="width: 130px;color:black">Quản lý</span></th>
                            </tr>
                        </thead>
                        <tbody class="datatable-body" style="">
                            {{#each teacher}}
                            <tr data-row="10" class="datatable-row" style="left: 0px;">
                                <td class="datatable-cell-sorted datatable-cell-left datatable-cell" data-field="RecordID"
                                    aria-label="11"><span style="width: 40px;"><span class="font-weight-bolder">Num</span></span></td>
                                <td data-field="OrderID" aria-label="68428-740" class="datatable-cell"><span style="width: 250px;">
                                        <div class="d-flex align-items-center">
                                            <div class="symbol symbol-50 symbol-sm flex-shrink-0"> 
                                                    <img class="" src="{{avatar}}" alt="photo">
                                            </div>
                                            <div class="ml-4">
                                                <div class="text-dark-75 font-weight-bolder font-size-lg mb-0">{{fullname}}</div>
                                            </div>
                                        </div>
                                    </span></td>
                                <td data-field="Country" aria-label="Morocco" class="datatable-cell"><span style="width: 158px;">
                                        <div class="font-weight-bolder font-size-lg mb-0">{{username}}</div>
                                    </span></td>
                                <td data-field="ShipDate" aria-label="2/8/2016" class="datatable-cell"><span style="width: 158px;">
                                        <div class="font-weight-bolder text-primary mb-0">{{phone}}</div>
                                    </span></td>
                                <td data-field="CompanyName" aria-label="Littel and Sons" class="datatable-cell"><span
                                        style="width: 158px;">
                                        <div class="font-weight-bold ">{{email}}</div>
                                    </span></td>
                                <td data-field="Status" aria-label="6" class="datatable-cell">
                                    <span style="width: 158px;">
                                    {{#if verified}}
                                    <span class="label label-lg font-weight-bold  label-light-info label-inline">Đã xác thực</span>
                                    {{else}}
                                    <span class="label label-lg font-weight-bold  label-light-danger label-inline">Chưa xác thực</span>
                                    {{/if}}
                                    </span>
                                </td>
