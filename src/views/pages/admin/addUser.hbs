<script>
    function showAlert(type, title, body) {
        Swal.fire({
            icon: type,
            title: title,
            text: body,
        })
    }
    jQuery('#btn_submit').click(() => {
        let $$ = jQuery;
        if ($$('#repassword').val() != $$('#password').val()) {
            alert("Check repeat password!!!");
        }
        $.post("",
            $("form#frm_add_teacher").serialize(),
            function (json) {
                if (json.state == false) {
                    showAlert("error", "Error", json.msg);
                }
                else {
                    showAlert("success", "Success", json.msg);
                }
                console.log(json);
            }, "json");
        console.log("Click");
    });
    jQuery('.dlt-btn').click(function () {
        id = jQuery(this).attr('name')

        Swal.fire({
            title: "Bạn có chắc muốn xóa người dùng ?",
            text: "Bạn sẽ không thể hoàn tác",
            icon: "question",
            showCancelButton: true,
            confirmButtonText: "Có",
            cancelButtonText: "Không",
            reverseButtons: true
        }).then(function (result) {
            if (result.value) {
                $.post("/admin/deleteUser", { userID: id }, function (result) {
                    if (result == 'true') {
                        Swal.fire(
                            "Xóa thành công",
                            "",
                            "success"
                        )
                        window.location.reload();
                    }
                    else Swal.fire(
                        "Xóa không thành công",
                        "",
                        "error"
                    )
                });

                // result.dismiss can be "cancel", "overlay",
                // "close", and "timer"
            } else if (result.dismiss === "cancel") {
                Swal.fire(
                    "Hủy thao tác xóa",
                    "",
                    "error"
                )
            }
        });
    })
</script>