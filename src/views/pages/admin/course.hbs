<div class="content d-flex flex-column flex-column-fluid" id="kt_content">

    <!--begin::Entry-->
    <div class="d-flex flex-column-fluid">
        <!--begin::Container-->
        <div class="container">

            <!--begin::Card-->
            <div class="card card-custom">
                <div class="card-header flex-wrap border-0 pt-6 pb-0">
                    <div class="card-title">
                        <h3 class="card-label">Quản lý khóa học
                            <span class="d-block text-muted pt-2 font-size-sm">Quản lý tất cả những khóa học được đăng tải trên hệ thống</span>
                        </h3>
                    </div>
                    <div class="card-toolbar">
                    
                        <!--begin::Button-->
                        <a href="#" class="btn btn-primary font-weight-bolder">
                            <span class="svg-icon svg-icon-md">
                                <!--begin::Svg Icon | path:assets/media/svg/icons/Design/Flatten.svg-->
                                <svg xmlns="http://www.w3.org/2000/svg" xmlns:xlink="http://www.w3.org/1999/xlink"
                                    width="24px" height="24px" viewBox="0 0 24 24" version="1.1">
                                    <g stroke="none" stroke-width="1" fill="none" fill-rule="evenodd">
                                        <rect x="0" y="0" width="24" height="24" />
                                        <circle fill="#000000" cx="9" cy="15" r="6" />
                                        <path
                                            d="M8.8012943,7.00241953 C9.83837775,5.20768121 11.7781543,4 14,4 C17.3137085,4 20,6.6862915 20,10 C20,12.2218457 18.7923188,14.1616223 16.9975805,15.1987057 C16.9991904,15.1326658 17,15.0664274 17,15 C17,10.581722 13.418278,7 9,7 C8.93357256,7 8.86733422,7.00080962 8.8012943,7.00241953 Z"
                                            fill="#000000" opacity="0.3" />
                                    </g>
                                </svg>
                                <!--end::Svg Icon-->
                            </span>New Record</a>
                        <!--end::Button-->
                    </div>
                </div>
                <div class="card-body">
                    <!--begin: Search Form-->
                    <!--begin::Search Form-->
                    <div class="mb-7">
                        <div class="row align-items-center">
                            <div class="col-lg-9 col-xl-8">
                                <div class="row align-items-center">
                                    <div class="col-md-4 my-2 my-md-0">
                                        <div class="input-icon">
                                            <input type="text" class="form-control" placeholder="Search..."
                                                id="kt_datatable_search_query" />
                                            <span>
                                                <i class="flaticon2-search-1 text-muted"></i>
                                            </span>
                                        </div>
                                    </div>
                                    <div class="col-md-4 my-2 my-md-0">
                                        <div class="d-flex align-items-center">
                                            <label class="mr-3 mb-0 d-none d-md-block">Status:</label>
                                            <select class="form-control" id="kt_datatable_search_status">
                                                <option value="">All</option>
                                                <option value="1">Pending</option>
                                                <option value="2">Delivered</option>
                                                <option value="3">Canceled</option>
                                                <option value="4">Success</option>
                                                <option value="5">Info</option>
                                                <option value="6">Vũ Minh Châuu</option>
                                            </select>
                                        </div>
                                    </div>
                                    <div class="col-md-4 my-2 my-md-0">
                                        <div class="d-flex align-items-center">
                                            <label class="mr-3 mb-0 d-none d-md-block">Lĩnh vực:</label>
                                            <select class="form-control" id="kt_datatable_search_cate">
                                                <option value="">All</option>
                                                <option value="1">Lập trình web</option>
                                                <option value="2">Lập trình di động</option>
                                            </select>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <div class="col-lg-3 col-xl-4 mt-5 mt-lg-0">
                                <a href="#" class="btn btn-light-primary px-6 font-weight-bold">Search</a>
                            </div>
                        </div>
                    </div>
                    <!--end::Search Form-->
                    <!--end: Search Form-->
                    <!--begin: Datatable-->
                    <table class="datatable datatable-bordered datatable-head-custom" id="kt_datatable">
                        <thead>
                            <tr>
                                <th title="Field #1">Tên khóa học</th>
                                <th title="Field #2">Giảng viên</th>
                                <th title="Field #3">Lĩnh vực</th>
                                <th title="Field #4">Đánh giá</th>
                                <th title="Field #5">Gía tiền</th>
                                <th title="Field #7">Quản lý</th>
                            </tr>
                        </thead>
                        <tbody>
                            {{#each courses}}
                            <tr>
                                <td><a href="/teacher/course/{{slug}}">{{name}}</a></td>
                                <td>{{author.fullname}}</td>
                                <td>{{SubCategory}}</td>
                                <td>
                                    <span class="text-muted font-size-sm font-weight-bolder">
                                        <img src="/assets/media/logos/star{{roundRating rating}}.jpg" alt="image"
                                            style="width: 5.5rem">
                                    </span>
                                    <span class="text-muted font-size-sm font-weight-bolder">
                                        ( {{allRates}} Đánh giá)
                                    </span>
                                </td>

                                <td>
                                    <div class="d-flex flex-column ">
                                        {{#if price_discount}}
                                        <span
                                            class="text-dark-75 font-weight-bolder font-size-h4">${{price_discount}}</span>
                                        <s class="text-muted font-size-h5 font-weight-bolder">${{price}}</s>
                                        {{else}}
                                        <span class="text-dark-75 font-weight-bolder font-size-h4">${{price}}</span>
                                        {{/if}}
                                    </div>
                                </td>
                             

                                <td data-field="Actions" data-autohide-disabled="false" aria-label="null"
                                    class="datatable-cell">
                                    <span style="overflow: visible; position: relative; width: 130px;">

                                        <a href="/admin/editUser/{{_id}}"
                                            class="btn btn-sm btn-default btn-text-primary btn-hover-primary btn-icon mx-2"
                                            title="Sửa thông tin">
                                            <span href="#"
                                                class="btn btn-outline-warning btn-circle font-weight-bold mr-2">
                                                <i class="flaticon-edit-1"></i>
                                            </span>
                                        </a>
                                        <span name="{{_id}}"
                                            class="btn btn-sm btn-default btn-text-primary btn-hover-primary btn-icon dlt-btn"
                                            title="Xóa">

                                            <span href="#"
                                                class="btn btn-outline-info btn-circle font-weight-bold mx-2">
                                                <i class="flaticon2-trash"></i>
                                            </span>
                                        </span>
                                    </span>
                                </td>
                            </tr>
                            {{/each}}

                        </tbody>
                    </table>
                    <!--end: Datatable-->
                </div>
            </div>
            <!--end::Card-->
        </div>
        <!--end::Container-->
    </div>
    <!--end::Entry-->
</div>

<script>
    $('.dlt-btn').click(function () {
        id = $(this).attr('name')

        Swal.fire({
            title: "Bạn có chắc muốn xóa khóa học ?",
            text: "Bạn sẽ không thể hoàn tác",
            icon: "question",
            showCancelButton: true,
            confirmButtonText: "Có",
            cancelButtonText: "Không",
            reverseButtons: true
        }).then(function (result) {
            if (result.value) {
                $.post("/admin/deleteCourse", { userID: id }, function (result) {
                    if (result = 'true') {
                        Swal.fire(
                            "Xóa thành công",
                            "",
                            "success"
                        )
                        window.location.reload();
                    }
                    else Swal.fire(
                        "Xóa không thành công",
                        "",
                        "error"
                    )
                });

                // result.dismiss can be "cancel", "overlay",
                // "close", and "timer"
            } else if (result.dismiss === "cancel") {
                Swal.fire(
                    "Hủy thao tác xóa",
                    "",
                    "error"
                )
            }
        });
    })
</script>