        <!--begin::Login-->
        <div class="login login-4 login-signin-on d-flex flex-row-fluid" id="kt_login">
            <div class="d-flex flex-center flex-row-fluid bgi-size-cover bgi-position-top bgi-no-repeat"
                style="background-image: url('assets/media/bg/bg-3.jpg');">
                <div class="login-form text-center p-7 position-relative overflow-hidden">
                    <!--begin::Login Header-->
                    <div class="d-flex flex-center mb-3">
                        <a href="/">
                            {{!-- <img src="/assets/media/logos/logo-letter-13.png" class="max-h-75px" alt="" /> --}}
                            <img src="/img/logo.png" class="max-h-150px" alt="" />
                        </a>
                    </div>
                    <!--end::Login Header-->
                    <!--begin::Login Sign in form-->
                    <div class="">
                        <div class="mb-3">
                            <h1>VERIFICATION</h1>
                        </div>
                        <form class="form" action="/otp" method="POST" id="kt_login_signin_form">
                                <div class="d-flex justify-content-center align-items-center container">
                                    <div class="card">
                                        <h5 class="mt-10">Email verification</h5>
                                        <span class="mobile-text">Enter the code we've just sent to your email </span>
                                        <div class="d-flex flex-row mt-5">
                                            <input type="text" name="digit1" maxlength="1" minlength="1" class="form-control" autofocus="">
                                            <input type="text" name="digit2" maxlength="1" minlength="1" class="form-control">
                                            <input type="text" name="digit3" maxlength="1" minlength="1" class="form-control">
                                            <input type="text" name="digit4" maxlength="1" minlength="1" class="form-control">
                                            <input type="text" name="digit5" maxlength="1" minlength="1" class="form-control">
                                            <input type="text" name="digit6" maxlength="1" minlength="1" class="form-control">
                                        </div>
                                        <div class="text-center mt-5">
                                            <span class="d-block mobile-text">Don't receive the code?</span>
                                            <span class="text-danger cursor">Resend</span>
                                        </div>
                                    </div>
                                </div>
                                <button id="otp_submit" type="submit" class="btn btn-primary px-9 py-4 my-9 mx-4">Verify</button>
                        </form>
                    </div>
                    <!--end::Login Sign in form-->

                </div>
            </div>
